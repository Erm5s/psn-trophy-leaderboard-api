// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model SystemConfig {
  id           Int      @id @default(1)
  refreshToken String?
  updatedAt    DateTime @updatedAt
}

model Player {
  id        Int          @id @default(autoincrement())
  accountId String       @unique
  psnId     String       @unique
  discordId String?
  points    Int?
  lastSync  DateTime?
  games     PlayerGame[]
}

model Game {
  id         Int          @id @default(autoincrement())
  npCommId   String       @unique
  name       String
  points     Int?
  difficulty Int?
  players    PlayerGame[]
}

model PlayerGame {
  player   Player @relation(fields: [playerId], references: [id])
  playerId Int
  game     Game   @relation(fields: [gameId], references: [id])
  gameId   Int
  progress Int    @default(0)

  @@id([playerId, gameId])
}
